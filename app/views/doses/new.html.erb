<div class="container">
  <h1>New dose</h1>
  <%= simple_form_for [@cocktail, @dose] do |f| %>

    <div class="form-group">
      <%= f.association :ingredient, as: :select, class: 'form-controls' %>
    </div>

    <div class="form-group">
      <%= f.input :description, class: 'form-controls' %>
    </div>

    <div class="form-group">
      <%= f.submit "Add", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
