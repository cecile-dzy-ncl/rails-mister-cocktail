<div class="container">
  <h1>New cocktail</h1>
  <%= simple_form_for [@cocktail] do |f| %>
    <div class="form-group">
      <%= f.input :name, class: 'form-controls' %>
    </div>

    <div class="form-group">
      <%= f.submit "Add a cocktail", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
